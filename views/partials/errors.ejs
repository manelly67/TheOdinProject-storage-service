<!-- views/partials/errors.ejs -->
<% if (locals.errors) {%>
    <ul style="display: flex; flex-direction: column; flex-wrap: wrap; gap:6px">
      <% errors.forEach(function(error) { %>
      <li style="color: red; text-decoration: underline; background-color: #fff">
        <%= error.msg %>
      </li>
      <% }); %>
    </ul>
    <% } %>